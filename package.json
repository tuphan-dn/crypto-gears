{
  "name": "desig",
  "version": "1.0.0",
  "description": "Decentralized Signatures. Multisig requires smart contracts to counts the number of signatures while Desig splits a private key into multiple pieces and each party will sign on a transaction.",
  "main": "dist/lib/index.js",
  "repository": "git@github.com:DescartesNetwork/desig.git",
  "author": "tuphan-dn <tuphan@descartes.network>",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc",
    "start": "nodemon src/index.ts",
    "predeploy": "typedoc --excludePrivate --excludeProtected ./src/index.ts",
    "deploy": "gh-pages -d docs",
    "pretest": "yarn clean",
    "test": "mocha --require ts-node/register -t 120000 test/**/*.test.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@noble/ed25519": "^1.7.1",
    "@solana/web3.js": "^1.62.1",
    "bn.js": "^5.2.1",
    "bs58": "^5.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "chai": "^4.3.6",
    "gh-pages": "^4.0.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16 <=18"
  }
}
